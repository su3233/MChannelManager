<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1.0dp" android:color="@color/bg_common_stroke" android:dashWidth="4dp" android:dashGap="2dp"></stroke>
                    <solid android:color="@color/bg_common"></solid>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/bg_selected_stroke" />
            <solid android:color="@color/bg_selected" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/bg_pressed_stroke" />
            <solid android:color="@color/bg_pressed" />
        </shape>
    </item>

    <item >
        <shape>
            <stroke android:width="0.5dp" android:color="@color/bg_normal_stroke" />
            <solid android:color="@color/bg_normal" />
        </shape>
    </item>
</selector>